                    android:layout_alignLeft="@+id/spinner_country"
                    android:layout_alignRight="@+id/spinner_country"
                    android:layout_below="@+id/spinner_country"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/home_input_box"
                    android:paddingLeft="10dip"
                    android:textSize="@dimen/reg_edit_text" />

                <Spinner
